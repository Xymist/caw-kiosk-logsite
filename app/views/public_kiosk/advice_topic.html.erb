<% @advice_pages.order(:id).each do |page|%>
  <%if page.kiosks.include? @kiosk.name and page.telephone == "" %>
    <div class="col-xs-4">
      <%= link_to page.url, :class => 'col-xs-12 topic-button no-telephone-topic' do %>
        <h1><%=page.organisation%></h1>
        <h3><%=page.details%></h3>
      <%end%>
    </div>
  <%elsif page.kiosks.include? @kiosk.name %>
    <div class="col-xs-4">
      <%= link_to page.url, :class => 'col-xs-12 topic-button telephone-topic' do %>
        <h1><%=page.organisation%></h1>
        <h3><%=page.details%></h3>
      <%end%>
      <%= link_to "sip:#{page.telephone}@10.33.228.250", :class => "col-xs-10 col-xs-offset-1 topic-button telephone-button" do %>
        <h3><i class="glyphicon glyphicon-phone-alt"></i>   <%=page.telephone%></h3>
      <%end%>
    </div>
  <%end%>
<%end%>
