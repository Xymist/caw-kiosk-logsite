<%
  time_stamp = Time.now
  kiosk_name = @kiosk.name
  Visit.create(time_stamp: time_stamp, topic_id: Topic.find_or_create_by(location: "home", host: Host.find_or_create_by(name: "82.70.237.248")).id, kiosk_id: @kiosk.id, checksum: Digest::MD5.hexdigest("#{time_stamp}|#{kiosk_name}"))
%>

<% @kiosk_topics.each do |kiosk_topic| %>
  <div class="col-xs-3">
    <%= link_to "#{@kiosk.name}/#{kiosk_topic.name}", :class => 'col-xs-12 topic-button' do %>
      <h1><%=kiosk_topic.label%></h1>
      <h3><%=kiosk_topic.description%></h3>
    <%end%>
  </div>
<%end%>
